#!/bin/sh /etc/rc.common

START=99

start() {
    echo "应用优化的IRQ和RPS设置..."
    
    echo 1 > "/proc/irq/22/smp_affinity" 
    echo 2 > "/proc/irq/20/smp_affinity"   
    echo 4 > "/proc/irq/19/smp_affinity" 
    echo 8 > "/proc/irq/17/smp_affinity" 
    
    echo f > /sys/class/net/eth0/queues/rx-0/rps_cpus 
    echo f > /sys/class/net/eth1/queues/rx-0/rps_cpus
    echo f > /sys/class/net/br-lan/queues/rx-0/rps_cpus  
    
    echo 32768 > /proc/sys/net/core/rps_sock_flow_entries
    
    # echo 3 > /sys/class/net/ra0/queues/rx-0/rps_cpus
    # echo 3 > /sys/class/net/rax0/queues/rx-0/rps_cpus
    
    # modprobe mt_wifi
    # ifconfig rax0 up
    # ifconfig ra0 up  
    # ifconfig rai0 up
    # /etc/init.d/apcli.sh start
    
    modprobe mtkhnat

    echo 32768 > /proc/sys/net/netfilter/nf_conntrack_buckets
    echo 16384 > /proc/sys/net/netfilter/nf_conntrack_expect_max
    
    echo "优化设置应用完成"
}
